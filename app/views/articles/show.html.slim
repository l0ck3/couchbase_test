h1 = @rm.article.title

p = @rm.article.content


- if logged_in?

  h2 Commentez

  = simple_form_for @cm.comment do |form|
    = form.input :article_id, as: :hidden
    = form.input :content, as: :text, label: false
    = form.submit

  h2 Commentaires

  - if current_user.admin?
    = link_to 'Mod√©rer les commentaires', admin_comments_moderations_path(id: @rm.article.id)
  - @csm.comments.each do |comment|
    strong
      = comment['username']
    p
      = comment['content']
    hr
